#!/usr/bin/env bash
# Convenience script for creating API projects.

if [ "$1" == "" ]
then
  #              1         2         3         4         5         6         7
  #     1234567890123456789012345678901234567890123456789012345678901234567890123456789
  echo "[31mMissing argument(s); run with -h option for more information[0m"
  exit 1
fi

# Assumes new-rails-app script is in the path.
new-rails-app "$@" -- --api
